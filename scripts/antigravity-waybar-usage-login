#!/usr/bin/env bash
set -euo pipefail

# Cloud login helper for Antigravity (wraps antigravity-usage)
# Stores cache under ~/.config/waybar/scripts/.llm-usage

CFG_DIR="$HOME/.config/waybar/scripts/.llm-usage"
mkdir -p "$CFG_DIR"

if ! command -v antigravity-usage >/dev/null 2>&1; then
  echo "antigravity-usage is not installed."
  echo "Install: npm i -g antigravity-usage"
  exit 1
fi

echo "Starting antigravity-usage login..."
antigravity-usage login

echo "Login complete."
