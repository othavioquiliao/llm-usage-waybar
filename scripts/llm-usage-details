#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

$SCRIPT_DIR/waybar-llm-usage.sh | python3 - <<'PY'
import json,sys
try:
    data=json.load(sys.stdin)
    print(data.get("tooltip", ""))
except Exception:
    print("(failed to parse tooltip)")
PY

echo
read -p "Press Enter..."
