#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

OUT=$($SCRIPT_DIR/waybar-llm-usage.sh)
printf '%s' "$OUT" | python3 -c 'import json,sys
try:
    data=json.load(sys.stdin)
    print(data.get("tooltip", ""))
except Exception as e:
    raw=sys.stdin.read()
    print("(failed to parse tooltip)")
    print(raw)'

echo
read -p "Press Enter..."
