// Add "custom/llm-usage" to your modules-right:
//   "modules-right": [..., "custom/llm-usage", ...]

{
  "custom/llm-usage": {
    "format": "{}",
    "exec": "$HOME/Work/llm-usage-waybar/scripts/llm-usage",
    "return-type": "json",
    "interval": 60,
    "markup": "pango",
    "on-click": "$HOME/Work/llm-usage-waybar/scripts/llm-usage --terminal | less -R",
    "on-click-right": "$HOME/Work/llm-usage-waybar/scripts/llm-usage --refresh"
  }
}
